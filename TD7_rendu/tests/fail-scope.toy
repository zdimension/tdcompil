int foo(int y) {
  int z, z;

  z= 2*y;
  print("in foo (1): x = ", x, " y = ", y, " z = ", z, "\n");
  {
    // Redefine x & y in an inner block;
    int x = 10, y = 20;
    int x;
    print("inner block: x = ", x, " y = ", y, " z = ", z, "\n");
    {
      // Redefine z in a block
      int z = 30;
      print("more inner block: x = ", x, " y = ", y, " z = ", z, "\n");
    }
    int y = 17;
  }
  print("in foo (2): x = ", x, " y = ", y, " z = ", z, "\n");
}

