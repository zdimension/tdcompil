int main() {
    int i = 0, j, k;

    // One loop 
    while (i < 10) {
        print("In loop: i = ",  i, "\n");
        if (i == 2) break;
        i++;
    }

    if (i != 2) print("FAILURE\n");
    print("--------------\n");

    i = k = 0;
    while (i < 10) {
        if (i == 5) break;
        print("Loop #1: k = ", k++, "\n");

        j = 0;
        while (j < 10) {
            if (j == 5) break;
            print("  Loop #2: k = ", k++, "\n");
            j++;
        }
        print("After Loop #1: k = ", k, "\n");
        i++;
    }

    print("Final k = ", k);
    print((k == 30) ? "SUCCESS\n": "FAILURE\n");

    return 0;
}
