int foo(int x) {
  // local variables 
  int w = 3 * 7 * x;

  return  w + 42;
}


// Global variables
int w, x = (5), y = 3* 2, z = -(100 * 2);


int main() {
    foo(17);
    print("w=", w, "x=", x, " y=", y, " z=", z, "\n");
    print("foo(x+y+z) = ", foo(x+y+z), "\n");
    print((foo(x+y+z) == -3927) ? "SUCCESS\n" : "FAILURE\n");
    print("End of test\n");
}

